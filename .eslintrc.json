{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["airbnb", "airbnb/hooks"],
  "ignorePatterns": [
    "!assets/js",
    "assets/js/*",
    "!assets/js/pluginsidebar",
    "!assets/js/util",
    "build",
    "vendor"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true,
      "jsx": true
    },
    "sourceType": "module"
  }
}
